@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Demo: Take a Selfie With JavaScript</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/CamScripts/css/styles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <style>
        .form-control {
            width: 25%;
        }
    </style>
</head>
<body>

    <div class="container">

        <div class="panel panel-info">
            <div class="panel-heading">Customer Dashboard</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-sm-4"></div>
                    <div class="col-md-4 col-lg-4 col-sm-4">
                        <div class="app" style="display:none;">
                            <a href="#" id="start-camera" class="visible">Touch here to start the app.</a>
                            <video id="camera-stream"></video>
                            <img id="snap">
                            <p id="error-message">
                            </p>

                            <!-- Hidden canvas element. Used for taking snapshot of video. -->
                            <canvas width="300" height="400"></canvas>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-4">

                        <div class="controls">
                            <div style="font-size:1.5em; color:Tomato">
                                <a href="#" id="take-photo" title="Take Photo">
                                    <i class="fas fa-camera-retro fa-sm btn btn-default">
                                        Capture
                                    </i>
                                </a>
                            </div>
                            <br />
                            <div style="font-size:1.5em; color:Tomato; display:none;">
                                <a href="#" id="delete-photo" title="Delete Photo" class="disabled">
                                    <i class="fas fa-trash fa-sm btn btn-default">
                                        Delete
                                    </i>
                                </a>
                            </div>
                            <div style="font-size:1.5em; color:Tomato;">
                                <a href="#" id="delete-photo" title="Delete Photo" class="disabled">
                                    <i class="fa fa-money-bill-alt fa-sm btn btn-default">
                                        View Bill
                                    </i>
                                </a>
                            </div>
                            <br />
                            <div style="display:none;">
                                <a href="#" id="download-photo" download="selfie.png" title="Save Photo"
                                   class="disabled">
                                    <input type="file" id="FileUpload1" multiple />
                                </a>
                                <button id="btnUpload" class="fas fa-file-upload fa-sm btn btn-default">File Upload</button>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="usrname">Customer Name:</label>
                        <input type="text" class="form-control" id="usrname">
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender:</label>
                        <input type="text" class="form-control" id="gender">
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" class="form-control" id="address">
                    </div>
                    <div class="form-group">
                        <label for="emailid">EmailID:</label>
                        <input type="text" class="form-control" id="emailid">
                    </div>
                    <div class="form-group">
                        <label for="address">Mobile Number:</label>
                        <input type="text" class="form-control" id="address">
                    </div>
                    <div class="form-group">
                        <label for="vpa">VPA(Virtual Payment Access Code):</label>
                        <input type="text" class="form-control" id="vpa">
                    </div>
                </div>
                <div class="row">
                    <div style="font-size:1.5em; color:Tomato">
                        <a href="#" id="take-photo" title="Take Photo">
                            <i class="fas fa-camera-retro fa-sm btn btn-default">
                                Onboard
                            </i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="row" style="display:none;">
                <div class="col-md-12">
                    <div class="col-xs-4">

                        <a href="#" id="face-photo" title="Face API" style="font-size:1.5em;">
                            <i class="fas fa-user fa-sm btn btn-default">
                                FaceAPI
                            </i>
                        </a>


                        <a href="#" id="vision-photo" title="Vision API" style="font-size:1.5em;">
                            <i class="fas fa-user fa-sm btn btn-default">
                                VisionAPI
                            </i>
                        </a>

                        <a href="#" id="Text-photo" title="Vision API" style="font-size:1.5em;">
                            <i class="fas fa-user fa-sm btn btn-default">
                                Text Image Return
                            </i>
                        </a>

                    </div>
                    <div id="ResponseTable">

                    </div>

                </div>

            </div>

        </div>
    </div>

    <script src="~/CamScripts/CanvasAzureScript.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .contant {
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 500px;
            padding: 20px;
            margin: 0 auto;
            text-align: center;
        }
    </style>
</body>
</html>

